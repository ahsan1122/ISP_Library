<resources>


    <style name="RequestTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/EditTextErrorTextAppearance</item>
    </style>

    <style name="EditTextErrorTextAppearance">
        <item name="android:textColor">@color/status_rejected</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="ToolbarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@drawable/draw_bg_simple_green</item>
        <!--<item name="android:paddingTop">@dimen/_15sdp</item>-->
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>



    <style name="MyTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_14</item><!-- text size in menu-->
        <item name="android:textColor">@color/white</item><!-- text size in menu-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>


    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/black</item>
    </style>

    <style name="MyRoundProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">@color/green</item>
        <item name="android:progressTint">@color/green</item>
    </style>

    <style name="fileChooserName">
        <item name="android:drawablePadding">@dimen/list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AddApplicationEditTextField" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/very_light_grey</item>
    </style>

    <style name="AddApplicationTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AddApplicationEditTextError" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/green</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spinnerarroq</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.MaterialComponents.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/very_light_grey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/light_grey</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/green</item>
        <item name="android:textColor">@color/status_rejected</item>
    </style>


</resources>
